type 'a clist = CNil | Single of 'a | Concat of 'a clist * 'a clist

type 'a list = Nil | Cons of 'a * 'a list

pmrs spec c =
    main l -> f l
    | f Nil -> 0
    | f Cons(hd,tl) -> (hd > c ? hd : 0) + (f tl)

pmrs (odot,f_0,s_0) target c =
    target t           -> h t
    | h CNil          -> s_0
    | h Single(a)    -> f_0 c a
    | h Concat(x, y) -> odot c (h x) (h y)

pmrs repr l =
    repr l -> c l
    | c CNil -> Nil
    | c Single(a) -> Cons(a, Nil)
    | c Concat(x, y) -> dec y x
    | dec l CNil -> repr l
    | dec l Single(a) -> Cons(a, repr l)
    | dec l Concat(x, y) -> dec (Concat(l, y)) x