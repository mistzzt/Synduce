type 'a tree = Node of 'a * 'a tree * 'a tree | Leaf of 'a

pmrs spec =
    main t -> f t
    | f Leaf(x) -> (x, x)
    | f Node(a,l,r) -> let amin, amax = h (a, a) l in h (amin, amax) r
    | h s Leaf(x) -> let amin, amax = s in min amin x, max amax x
    | h s Node(a,l,r) ->
            let amin, amax = s in
            h (h (min amin a, max amax a) l) r

pmrs (join, f0) target =
    main t1 -> h t1
    | h Leaf(x) -> f0 x
    | h Node(a,l,r) -> join a (h l) (h r)

