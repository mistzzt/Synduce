
let odot (x11, x110, x111) (x12, x120, x121) =
  (x11 + x12, max x110 (x11 + x120), max x121 (x111 + x12))

let f0 x8 = (x8, max x8 0, max 0 x8)

let s0  = (0, 0, 0)

target⟨odot, f0, s0⟩(): int clist -> (int * int * int)  = 
{
  ‣ main t   ⟹  h t
    h  CNil  ⟹  s0
    h  Single(a)  ⟹  f0 a
    h  Concat(y, z)  ⟹  odot (h y) (h z)
  
  }
