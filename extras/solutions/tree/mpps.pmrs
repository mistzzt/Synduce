
let join1 x25 (x26, x260) (x27, x270) =
  (x25 + (x26 + x27), x25 + (max x260 (max (- x25) (x26 + x270))))

let f0 x23 = (x23, max 0 x23)

let s0  = (0, 0)

target⟨join1, f0, s0⟩(): int tree -> (int * int)  = 
{
  ‣ main_mpps t1   ⟹  mpps t1
    mpps  Nil  ⟹  s0
    mpps  Single(a)  ⟹  f0 a
    mpps  Node(a, l, r)  ⟹  join1 a (mpps l) (mpps r)
  
  }
