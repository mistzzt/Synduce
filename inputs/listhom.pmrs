type 'a clist = Nil | Single of 'a | Concat of 'a list * 'a list

type 'a list = Nil | Cons of 'a * 'a list

pmrs mts l =
    main l -> f l
    | f Nil -> 0
    | f Cons(hd,tl) -> (fun (s,m) -> s + hd, max (s + hd) m) (f tl)

pmrs (odot,f_0,s_0) listhom t =
    main t           -> f t
    | f Nil          -> s_0
    | f Single(a)    -> f_0 a
    | f Concat(x, y) -> odot (f x) (f y)
