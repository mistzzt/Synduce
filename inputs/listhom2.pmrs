type 'a clist = CNil | Single of 'a | Concat of 'a clist * 'a clist

type 'a list = Nil | Cons of 'a * 'a list

pmrs mts l =
    main l -> f l
    | f Nil -> (0,0)
    | f Cons(hd,tl) -> (fun (s,m) -> s + hd, max (s + hd) m) (f tl)

pmrs (odot1, odot2, f_0, s_0) listhom t =
    main t           -> h t
    | h CNil          -> s_0
    | h Single(a)    -> f_0 a
    | h Concat(Single(a), y) -> odot1 a (h y)
    | h Concat(x, y) -> odot2 (h x) (h y)
