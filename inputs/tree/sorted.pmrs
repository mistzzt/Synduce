type 'a tree = Leaf of 'a | Node of 'a * 'a tree * 'a tree

pmrs spec =
    main Leaf(x) -> x, true
    | main Node(a,l,r) -> (fun (lh, lis) (rh, ris) -> a, (lh < a && a < rh) && lis && ris) (main l) (main r)


pmrs (join) target =
    main t1 -> h t1
    | h Leaf(a) -> (a, true)
    | h Node(a,l,r) -> join a (h l) (h r)

